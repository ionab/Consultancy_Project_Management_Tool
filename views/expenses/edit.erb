<h1><img class = "headerimage" src="/images/money.png" alt="money-logo">Edit Expenses</h1>
<hr/>

<form action="/expenses/<%=@expenses.id%>/update" method = "post">

  <label for="cost_excluding_vat">Cost Excluding Vat: £</label>
  <input type="number"  step="0.01" id="cost_excluding_vat" name="cost_excluding_vat" value="<%= '%.2f' % @expenses.cost_excluding_vat%>">

  <label for="vat">VAT: £</label>
  <input type="number"  step="0.01" id="vat" name="vat" value="<%= '%.2f' % @expenses.vat%>">

  <label for="category">Category:</label>
  <input type="text" id="category" name="category" value= "<%= @expenses.category %>">

  <label for="project_id">Project:</label>
  <select name="project_id" id="project_id" selected="<%= @expenses.project_id  %>">
    <% @projects.each do |project| %>
      <% if project.id == @expenses.project_id %>
        <option value=<%= project.id %> selected><%= project.name %></option>
      <% else %>
        <option value=<%= project.id %>><%= project.name %></option>
      <% end %>
    <% end %>
  </select>

  <label for="employee_id">Employee:</label>
  <select name="employee_id" id="employee_id" selected="<%= @expenses.employee_id  %>">
    <% @employees.each do |employee| %>
      <% if employee.id == @expenses.employee_id %>
        <option value=<%= employee.id %> selected><%= employee.name %></option>
      <% else %>
        <option value=<%= employee.id %>><%= employee.name %></option>
      <% end %>
    <% end %>
  </select>

<input type="submit" value="Update Expense">

</form>
