<h1><img class = "headerimage" src="/images/money.png" alt="money-logo">Add Expenses</h1>
<hr/>

<form action="/expenses" method = "post">

  <label for="cost_excluding_vat">Cost, excluding VAT(GBP):</label>
  <input type="number"  step="0.01" id="cost_excluding_vat" name="cost_excluding_vat">

  <label for="vat">VAT(GBP):</label>
  <input type="number"  step="0.01" id="vat" name = "vat">

  <label for="category">Category:</label>
  <select name="category" id="category">
    <option value="Fuel">Fuel</option>
    <option value="Hire Car">Hire Car</option>
    <option value="Equipment">Equipment</option>
    <option value="Subsistence">Subsistence</option>
    <option value="Accommodation">Accommodation</option>
    <option value="Public Transport">Public Transport</option>
    <option value="Parking">Parking</option>
  </select>


  <label for="project_id">Project:</label>
  <select name="project_id" id="project_id">
    <% @projects.each do |project| %>
    <option value="<%= project.id%>"><%=project.name %></option>
  <%end%>
  </select>

  <label for="employee_id">Employee:</label>
  <select name="employee_id" id="employee_id">
    <% @employees.each do |employee| %>
    <option value="<%= employee.id%>"><%=employee.name %></option>
  <%end%>
  </select>

<input type="submit" value="Create New Expense">

</form>
