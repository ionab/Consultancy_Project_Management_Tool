<h1><img class = "headerimage" src="/images/time.png" alt="time-logo">Add new Timesheet</h1>
<hr/>

<form action="/time-units" method = "post">

  <label for="hours">Hours:</label>
  <input type="number" step="0.01" id="hours" name="hours">

  <label for="category">Category:</label>
  <select name="category" id="category">
    <option value="Meeting">Meeting</option>
    <option value="Project Management">Project Management</option>
    <option value="Data Management">Data Management</option>
    <option value="Administration">Administration</option>
    <option value="Equipment Maintenance">Equipment Maintenance</option>
    <option value="Reporting">Reporting</option>
    <option value="Review and Quality Assurance">Review and Quality Assurance</option>
    <option value="Proposal">Proposal</option>
  </select>

  <label for="project_id">Project:</label>
  <select name="project_id" id="project_id">
    <% @projects.each do |project| %>
    <option value="<%= project.id%>"><%=project.name %></option>
  <%end%>
  </select>

  <label for="employee_id">Employee:</label>
  <select name="employee_id" id="employee_id">
    <% @employees.each do |employee| %>
    <option value="<%= employee.id%>"><%=employee.name %></option>
  <%end%>
  </select>

<input type="submit" value="Create New Time">

</form>
